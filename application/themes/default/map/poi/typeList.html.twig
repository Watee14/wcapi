	function delete_data(data){
		//console.log(data);
		$('#record-manage-label').html('ลบชื่อไม่เป็นทางการ ' + data) ;
		$('#del_id').val(data) ;
	    $('#modalwindow').modal('show');
	  
	}

	$('#del').on('click', function() {
		 
		var ds = new Array();
		ds[0] = "xxxx" ;
		$.ajax({
			url: '{{base_url()}}mapPoi/mapType_action/delete/'+ encodeURI($('#del_id').val())  ,  
			data:  { poi_type_code: $('#del_id').val()  } ,                         
			type: 'POST',
			success: function(result){
            	obj = $.parseJSON(result);  
	            $('#modalwindow').modal('hide');
	            if(obj['status']==0){
	            	msgDialog( obj['message']  , 'alert-success' );
	            }else{
	            	msgDialog( obj['message']  , 'alert-danger' );
	            }
			    dt.ajax.reload();
			}
		});
	});

	function msgDialog(msg , typeBlog){
		$('.validate-alert').html('' +
			'<div class="alert alert-dismissible" role="alert">' +
				'<a role="button" class="close" data-dismiss="alert" aria-label="Close"></a>' +
				'<span>'+ msg +'</span>' +
			'</div>' +
		'');
		$('.validate-alert').fadeIn('fast');
		$('.validate-alert').find('.alert').addClass( typeBlog );
		/*var myVar = setInterval(function(){ 
